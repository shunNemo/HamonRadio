      h2.c-label__hdr--contents
        | Youtube
      ul.c-list__card--with-ttl.js--list-youtube

    section.p-hr__box--instagram
      h2.c-label__hdr--contents
        | Instagram
      ul.c-list__card--photo.js--list-instagram

    section.p-hr__box--mixcloud
      h2.c-label__hdr--contents
        | Mixcloud
      ul.c-list__card--mixcloud.js--list-mixcloud
